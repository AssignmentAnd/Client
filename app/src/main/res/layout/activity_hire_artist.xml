<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".HireArtist">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepting Challenge"
        android:layout_margin="15dp"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="User's Name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Biraj Timilsina"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Phone"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="9863346414"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Discord ID"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="262dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:text="882169078008119306"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/design_default_color_error"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="25sp"
            app:icon="@drawable/ic_baseline_cancel_24" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="185dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Accept"
            android:textSize="25sp"
            app:icon="@drawable/ic_baseline_emoji_people_24" />
    </LinearLayout>

        </LinearLayout>